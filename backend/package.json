{
  "name": "movienight-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "knex": "tsx ./node_modules/.bin/knex",
    "check": "biome check --write",
    "dev": "tsx --watch src/index.ts",
    "dev:db:migration:create": "npm run knex migrate:make",
    "dev:db:create": "createdbjs movienight_development --user=postgres --password=postgres --host=127.0.0.1",
    "dev:db:drop": "dropdbjs movienight_development --user=postgres --password=postgres --host=127.0.0.1",
    "dev:db:migrate": "npm run knex migrate:latest",
    "dev:db:rollback": "npm run knex migrate:rollback",
    "dev:db:seed": "npm run knex seed:run",
    "test": "tsx ./node_modules/.bin/vitest",
    "test:db:create": "createdbjs movienight_test --user=postgres --password=postgres --host=127.0.0.1",
    "test:db:drop": "dropdbjs movienight_test --user=postgres --password=postgres --host=127.0.0.1",
    "test:db:migrate": "NODE_ENV=test npm run knex migrate:latest",
    "test:db:rollback": "NODE_ENV=test npm run knex migrate:rollback"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@bull-board/api": "^6.7.10",
    "@bull-board/express": "^6.7.10",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.0.3",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "bullmq": "^5.44.4",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "fastify": "^5.2.1",
    "knex": "^3.1.0",
    "objection": "^3.1.5",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@faker-js/faker": "^9.5.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@types/bull": "^4.10.4",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/knex-cleaner": "^1.3.6",
    "@types/node": "^22.12.0",
    "@types/nodemailer": "^6.4.17",
    "fishery": "^2.2.3",
    "knex-cleaner": "^1.3.1",
    "pgtools": "^1.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  }
}
